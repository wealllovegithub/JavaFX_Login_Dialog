<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="350.0" prefHeight="200" xmlns="http://javafx.com/javafx/8.0.40"
           fx:controller="com.doughepi.main.RegisterController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <StackPane StackPane.alignment="CENTER">
        <children>
            <VBox maxWidth="Infinity" spacing="20.0" StackPane.alignment="CENTER">
                <children>
                    <GridPane maxWidth="Infinity" VBox.vgrow="ALWAYS">
                        <children>
                            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            </Label>
                            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            </Label>
                            <TextField fx:id="user" maxWidth="Infinity" GridPane.columnIndex="1"
                                       GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"/>
                            <PasswordField fx:id="pass" maxWidth="Infinity" GridPane.columnIndex="1"
                                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
                            <PasswordField fx:id="secondPass" maxWidth="Infinity" GridPane.columnIndex="1"
                                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
                            <Label text="Enter again:" GridPane.rowIndex="2">
                            </Label>
                        </children>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                    </GridPane>
                    <GridPane alignment="CENTER" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER"
                                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            </Label>
                        </children>
                    </GridPane>
                    <HBox alignment="CENTER_RIGHT" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                        <children>
                            <Button fx:id="cancelButton" alignment="TOP_LEFT" mnemonicParsing="false" text="Cancel">
                                <HBox.margin>
                                    <Insets right="10.0"/>
                                </HBox.margin>
                            </Button>
                            <Button fx:id="registerButton" alignment="CENTER" defaultButton="true"
                                    mnemonicParsing="false" text="Register">
                            </Button>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </StackPane>
</StackPane>
